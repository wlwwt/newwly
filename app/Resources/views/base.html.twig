<!DOCTYPE html>
<html lang="de">
  <head>
        <meta charset="utf-8">
        <title>{% block title %}Newwly Base HTML{% endblock %}</title>
		
		{% block meta %}
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="Lesen Sie Ihre individuell angepasste Zeitung als eBook.">
		<meta name="author" content="newwly.com">
		{% endblock %}
        
		{% block stylesheets %}
		<link href="{{ asset('/assets/css/newwly.min.css') }}" type="text/css" rel="stylesheet" />
		
		<!--[if lt IE 9]>
		<script src="{{ asset('/assets/js/html5shiv.js') }}"></script>
		<![endif]-->
		{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('/assets/ico/favicon.ico') }}" />
    </head>
	
    <body>
        
	{% block navbar %}
	<div class="navbar">
		<div class="navbar-inner">
			<div class="container-fluid">
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					<a class="brand" href="{{ path('newwly_dashboard_homepage') }}"><span>newwly</span></a>
				{% else %}
					<a class="brand" href="{{ path('newwly_homepage') }}"><span>newwly</span></a>
				{% endif %}
				<div class="pull-right">
					
					{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
						
						<div class="pull-right">
							<p class="navbar-text">
								{{ 'layout.logged_in_as'|trans({}, 'FOSUserBundle') }}
							<a href="{{ path('fos_user_profile_show') }}">
							{{ app.user.username }}
							</a>
							</p>
							
							<a href="{{ path('fos_user_security_logout') }}" class="btn">
							{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
							</a>
						</div>
					{% else %}
						<p class="navbar-text">Neu bei newwly?</p>
						<a href="{{ path('fos_user_registration_register') }}" class="btn btn-action">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
					{% endif %}

				</div>
			</div>
		</div>
    </div>
	{% endblock %}
		
		{% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
