{% extends '::base.html.twig' %}
{% trans_default_domain 'NewwlyDashboardBundle' %}
{% block title %}Dashboard{% endblock %}

{% block body %}



<div class="container-fluid">
{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-{{ type }}">
                {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    <div class="row-fluid">
        <div class="span3">
            <a class="btn btn-action" href="{{ path('newwly_dashboard_newspaper_create') }}">{{ 'navigation.create'|trans }}</a>
            <ul class="nav nav-list">
                <li class="{% if app.request.get('_route') == 'newwly_dashboard_homepage' %}active{% endif %}"><a href="{{ path('newwly_dashboard_homepage') }}">{{ 'navigation.dashboard'|trans }}</a></li>
                <li class="{% if app.request.get('_route') == 'newwly_dashboard_newspaper_list' %}active{% endif %}"><a href="{{ path('newwly_dashboard_newspaper_list') }}">{{ 'navigation.list'|trans }}</a></li>
                <li class="{% if (app.request.get('_route') == 'fos_user_profile_show') or (app.request.get('_route') == 'fos_user_profile_edit') %}active{% endif %}"><a href="{{ path('fos_user_profile_show') }}">{{ 'navigation.profile'|trans }}</a></li>
            </ul>
        </div>
        <div class="span8">
        {% block dashboard_content %}
        {% endblock dashboard_content %}
        </div>
    </div>
</div>
{% endblock %}

